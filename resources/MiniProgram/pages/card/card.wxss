.header {
  background: #f0eff4;
  border-bottom: 1rpx solid #f0eff4;
  height: 98rpx;
  width: 100vw;
  float: left;
  margin-bottom: 24rpx;
}

.header input {
  width: 647rpx;
  height: 59rpx;
  border: 1px solid #dfdfde;
  border-radius: 30rpx;
  background: #fff;
  font-size: 28rpx;
  margin: 19rpx auto;
  display: block;
  padding: 0 30rpx;
}

.header .placeholder-search {
  text-align: center;
}

.scroll-view {
  width: 100vw;
}

.card-box {
  margin-top: 25rpx;
}

.card-box .row {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e3e3e5;
  border-bottom: 1rpx solid #e3e3e5;
  background: #fff;
  margin-top: -1rpx;
}

.card-box .col-md-2 {
  float: left;
}

.card-box .col-md-10 text {
  width: 100%;
  float: left;
  font-size: 28rpx;
  color: #1f1f1f;
  line-height: 1.5;
}
.card-box .col-md-10 text:first-child{
  margin-top: 10rpx;
}
.card-box .col-md-10 text:last-child {
  font-size: 25rpx;
  color: #878787;
}

.title {
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  color: #838383;
  text-indent: 33rpx;
}

.scroll-view image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}
